{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [],
  "tools": {
    "read": true,
    "write": true,
    "edit": true,
    "patch": true,
    "bash": true,
    "glob": true,
    "grep": true,
    "list": true,
    "lsp": true,
    "todowrite": true,
    "todoread": true,
    "webfetch": true,
    "websearch": true,
    "question": true,
    "skill": true
  },
  "permission": {
    "edit": "ask",
    "bash": {
      "*": "ask",
      "git status*": "allow",
      "git diff*": "allow",
      "git log*": "allow",
      "npm test*": "allow",
      "pnpm test*": "allow",
      "bun test*": "allow",
      "bun run*": "allow"
    },
    "webfetch": "ask"
  },
  "model": "openai/gpt-5.2-codex",
  "agent": {
    "enkidu-orchestrator": {
      "description": "Primary orchestrator: decomposes work, spawns subagents, enforces gates, assembles PR.",
      "mode": "primary",
      "steps": 25,
      "tools": {
        "edit": false,
        "write": false,
        "patch": false,
        "bash": true,
        "webfetch": true,
        "websearch": true,
        "todoread": true,
        "todowrite": true
      },
      "permission": {
        "bash": {
          "*": "ask",
          "git status*": "allow",
          "git diff*": "allow",
          "git log*": "allow",
          "gh *": "ask"
        },
        "webfetch": "allow",
        "task": {
          "*": "deny",
          "enkidu-*": "allow"
        }
      }
    },
    "enkidu-deepthink": {
      "description": "High-reasoning agent for architecture + tricky debugging. Prefers planning, not editing.",
      "mode": "primary",
      "model": "openai/gpt-5.2",
      "reasoningEffort": "xhigh",
      "reasoningSummary": "auto",
      "textVerbosity": "low",
      "steps": 30,
      "tools": {
        "edit": false,
        "write": false,
        "patch": false,
        "bash": false,
        "webfetch": true,
        "websearch": true,
        "todoread": true,
        "todowrite": true
      },
      "permission": {
        "webfetch": "allow"
      }
    },
    "enkidu-research": {
      "description": "Research subagent: websearch/webfetch only. Produces cited notes.",
      "mode": "subagent",
      "hidden": true,
      "model": "openai/gpt-5.2",
      "reasoningEffort": "high",
      "reasoningSummary": "auto",
      "textVerbosity": "low",
      "steps": 20,
      "tools": {
        "edit": false,
        "write": false,
        "patch": false,
        "bash": false,
        "webfetch": true,
        "websearch": true
      },
      "permission": {
        "webfetch": "allow"
      }
    },
    "enkidu-architect": {
      "description": "Architecture subagent: proposes ADRs and interfaces. No code edits unless asked.",
      "mode": "subagent",
      "model": "openai/gpt-5.2",
      "reasoningEffort": "high",
      "reasoningSummary": "auto",
      "textVerbosity": "medium",
      "steps": 25,
      "tools": {
        "edit": true,
        "write": true,
        "patch": true,
        "bash": false,
        "webfetch": true,
        "websearch": true
      },
      "permission": {
        "edit": "ask",
        "webfetch": "allow"
      }
    },
    "enkidu-implementer": {
      "description": "Implementation subagent: writes code + tests. Minimal web access.",
      "mode": "subagent",
      "model": "openai/gpt-5.2-codex",
      "reasoningEffort": "high",
      "textVerbosity": "medium",
      "steps": 30,
      "tools": {
        "edit": true,
        "write": true,
        "patch": true,
        "bash": true,
        "webfetch": false,
        "websearch": false
      },
      "permission": {
        "edit": "allow",
        "bash": {
          "*": "ask",
          "git status*": "allow",
          "git diff*": "allow",
          "git add*": "allow",
          "git commit*": "ask",
          "npm test*": "allow",
          "pnpm test*": "allow",
          "bun test*": "allow",
          "bun run*": "allow"
        },
        "webfetch": "deny"
      }
    },
    "enkidu-tester": {
      "description": "Testing subagent: runs test suite, improves tests, fixes flaky tests.",
      "mode": "subagent",
      "model": "openai/gpt-5.2-codex",
      "reasoningEffort": "medium",
      "textVerbosity": "low",
      "steps": 25,
      "tools": {
        "edit": true,
        "write": true,
        "patch": true,
        "bash": true,
        "webfetch": false,
        "websearch": false
      },
      "permission": {
        "edit": "allow",
        "bash": {
          "*": "ask",
          "npm test*": "allow",
          "pnpm test*": "allow",
          "bun test*": "allow",
          "bun run*": "allow"
        }
      }
    },
    "enkidu-reviewer": {
      "description": "Review subagent: code review, style, edge cases. No edits.",
      "mode": "subagent",
      "model": "openai/gpt-5.2",
      "reasoningEffort": "medium",
      "reasoningSummary": "auto",
      "textVerbosity": "low",
      "steps": 15,
      "tools": {
        "edit": false,
        "write": false,
        "patch": false,
        "bash": false,
        "webfetch": false,
        "websearch": false,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true
      }
    }
  }
}
