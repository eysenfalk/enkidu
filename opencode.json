{
  "$schema": "https://opencode.ai/config.json",
  "plugin": [
    "opencode-websearch-cited@1.2.0"
  ],
  "tools": {
    "read": true,
    "write": true,
    "edit": true,
    "patch": true,
    "bash": true,
    "glob": true,
    "grep": true,
    "list": true,
    "lsp": true,
    "todowrite": true,
    "todoread": true,
    "webfetch": true,
    "websearch": true,
    "websearch_cited": true,
    "task": true,
    "question": true,
    "skill": true
  },
  "permission": {
    "edit": "ask",
    "bash": {
      "*": "ask",
      "git status*": "allow",
      "git diff*": "allow",
      "git log*": "allow",
      "npm test*": "allow",
      "pnpm test*": "allow",
      "bun test*": "allow",
      "bun run*": "allow"
    },
    "webfetch": "allow"
  },
  "provider": {
    "openai": {
      "options": {
        "websearch_cited": {
          "model": "gpt-5.2"
        }
      }
    }
  },
  "model": "openai/gpt-5.3-codex",
  "agent": {
    "enkidu-orchestrator": {
      "description": "Primary orchestrator: decomposes work, spawns subagents, enforces gates, assembles PR. Uses websearch_cited as default search.",
      "mode": "primary",
      "tools": {
        "edit": false,
        "write": false,
        "patch": false,
        "bash": true,
        "webfetch": true,
        "websearch": true,
        "websearch_cited": true,
        "todoread": true,
        "todowrite": true,
        "task": true
      },
      "permission": {
        "bash": {
          "*": "ask",
          "git status*": "allow",
          "git diff*": "allow",
          "git log*": "allow",
          "gh *": "ask"
        },
        "webfetch": "allow",
        "task": {
          "*": "deny",
          "enkidu-*": "allow"
        }
      },
      "prompt": "{file:./.opencode/prompts/enkidu-orchestrator.md}"
    },
    "enkidu-deepthink": {
      "description": "High-reasoning agent for architecture + tricky debugging. Prefers planning, not editing. Uses websearch_cited as default search.",
      "mode": "primary",
      "model": "openai/gpt-5.2",
      "reasoningEffort": "xhigh",
      "reasoningSummary": "auto",
      "textVerbosity": "low",
      "tools": {
        "edit": false,
        "write": false,
        "patch": false,
        "bash": false,
        "webfetch": true,
        "websearch": true,
        "websearch_cited": true,
        "todoread": true,
        "todowrite": true
      },
      "permission": {
        "webfetch": "allow"
      },
      "prompt": "{file:./.opencode/prompts/enkidu-deepthink.md}"
    },
    "enkidu-deepresearch": {
      "description": "Deep research orchestrator: decomposes the question and spawns many research subagents for breadth. Uses websearch_cited as default search.",
      "mode": "primary",
      "model": "openai/gpt-5.2",
      "reasoningEffort": "high",
      "reasoningSummary": "auto",
      "textVerbosity": "low",
      "tools": {
        "edit": false,
        "write": false,
        "patch": false,
        "bash": false,
        "read": true,
        "webfetch": true,
        "websearch": true,
        "websearch_cited": true,
        "todoread": true,
        "todowrite": true,
        "task": true
      },
      "permission": {
        "webfetch": "allow",
        "task": {
          "*": "deny",
          "enkidu-research": "allow"
        }
      },
      "prompt": "{file:./.opencode/prompts/enkidu-deepresearch.md}"
    },
    "enkidu-research": {
      "description": "Research subagent: websearch_cited/webfetch first, websearch fallback. Produces cited notes.",
      "mode": "subagent",
      "hidden": true,
      "model": "openai/gpt-5.1-codex-mini",
      "reasoningEffort": "high",
      "reasoningSummary": "auto",
      "textVerbosity": "low",
      "tools": {
        "edit": false,
        "write": false,
        "patch": false,
        "bash": false,
        "webfetch": false,
        "websearch": true,
        "websearch_cited": true
      },
      "permission": {
        "webfetch": "allow"
      },
      "prompt": "{file:./.opencode/prompts/enkidu-research.md}"
    },
    "enkidu-architect": {
      "description": "Architecture subagent: proposes ADRs and interfaces. No code edits unless asked. Uses websearch_cited as default search.",
      "mode": "subagent",
      "model": "openai/gpt-5.3-codex",
      "reasoningEffort": "high",
      "reasoningSummary": "auto",
      "textVerbosity": "medium",
      "tools": {
        "edit": true,
        "write": true,
        "patch": true,
        "bash": false,
        "webfetch": true,
        "websearch": true,
        "websearch_cited": true
      },
      "permission": {
        "edit": "ask",
        "webfetch": "allow"
      },
      "prompt": "{file:./.opencode/prompts/enkidu-architect.md}"
    },
    "enkidu-implementer": {
      "description": "Implementation subagent: writes code + tests. Minimal web access.",
      "mode": "subagent",
      "model": "openai/gpt-5.3-codex",
      "reasoningEffort": "high",
      "textVerbosity": "medium",
      "tools": {
        "edit": true,
        "write": true,
        "patch": true,
        "bash": true,
        "webfetch": true,
        "websearch": false
      },
      "permission": {
        "edit": "allow",
        "bash": {
          "*": "ask",
          "git status*": "allow",
          "git diff*": "allow",
          "git add*": "allow",
          "git commit*": "ask",
          "npm test*": "allow",
          "pnpm test*": "allow",
          "bun test*": "allow",
          "bun run*": "allow"
        },
        "webfetch": "allow"
      },
      "prompt": "{file:./.opencode/prompts/enkidu-implementer.md}"
    },
    "enkidu-tester": {
      "description": "Testing subagent: runs test suite, improves tests, fixes flaky tests.",
      "mode": "subagent",
      "model": "openai/gpt-5.3-codex",
      "reasoningEffort": "medium",
      "textVerbosity": "low",
      "tools": {
        "edit": true,
        "write": true,
        "patch": true,
        "bash": true,
        "webfetch": true,
        "websearch": false
      },
      "permission": {
        "edit": "allow",
        "bash": {
          "*": "ask",
          "npm test*": "allow",
          "pnpm test*": "allow",
          "bun test*": "allow",
          "bun run*": "allow"
        },
        "webfetch": "allow"
      },
      "prompt": "{file:./.opencode/prompts/enkidu-tester.md}"
    },
    "enkidu-reviewer": {
      "description": "Review subagent: code review, style, edge cases. No edits.",
      "mode": "subagent",
      "model": "openai/gpt-5.2",
      "reasoningEffort": "high",
      "reasoningSummary": "auto",
      "textVerbosity": "low",
      "tools": {
        "edit": false,
        "write": false,
        "patch": false,
        "bash": false,
        "webfetch": true,
        "websearch": false,
        "read": true,
        "grep": true,
        "glob": true,
        "list": true
      },
      "permission": {
        "webfetch": "allow"
      },
      "prompt": "{file:./.opencode/prompts/enkidu-reviewer.md}"
    }
  }
}
